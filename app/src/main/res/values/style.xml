<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextAppearance.unknown" parent="TextAppearance.AppCompat" />

    <style name="TextAppearance.unknown.HeadLine1">
        <item name="android:fontFamily">@font/font_bold</item>
        <item name="fontFamily">@font/font_bold</item>
