    </style>

    <style name="TextAppearance.unknown.HeadLine2">
        <item name="android:fontFamily">@font/font_regular</item>
        <item name="fontFamily">@font/font_regular</item>
        <item name="android:textSize">18dp</item>
    </style>

    <style name="TextAppearance.unknown.Body0">
        <item name="android:fontFamily">@font/font_demi_light</item>
        <item name="fontFamily">@font/font_demi_light</item>
        <item name="android:textSize">18dp</item>
    </style>

    <style name="TextAppearance.unknown.Body1">
        <item name="android:fontFamily">@font/font_demi_light</item>
        <item name="fontFamily">@font/font_demi_light</item>
        <item name="android:textSize">16dp</item>
